{
  /* ---------------- Formatting & linting -------------- */
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "100"],
  "editor.formatOnSave": true,

  "ruff.lint.enable": true,
  "ruff.fixAll": true,
  "python.linting.enabled": false,          // turn off Pylint

  /* ---------------- Testing --------------------------- */
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],

  /* ---------------- File explorer hygiene ------------- */
  "files.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    // keep poetry.lock visible by default
    "poetry.lock": false
  }
}
